---
import Layout from "../layouts/Layout.astro";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import Setting from "../components/setting/index.svelte";
import Info from "../components/setting/info.svelte";
import Build from "../components/setting/build.astro";
---

<Layout title="모바일 학생증 서비스">
  <div class="wrapper">
    <Header />
    <div class="content">
      <Setting client:idle />
      <Info client:idle />
      <Build />
    </div>
    <Footer />
  </div>
</Layout>

<style lang="scss" scoped>
  body {
    background-color: var(--Grayscale-20);
  }

  .wrapper {
    width: 100%;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .content {
    width: 100%;
    height: 100%;
    display: flex;
    flex-wrap: wrap;
    padding: 66px 20px 32px 20px;
    flex-direction: column;
    align-content: center;
    align-items: center;
    gap: 24px;
  }

  .footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    margin-bottom: 40px;

    p {
      color: var(--Grayscale-30);
      text-align: center;
      font-family: SUIT;
      font-size: 15px;
      font-style: normal;
      font-weight: 400;
      line-height: 150%; /* 22.5px */
    }
  }
</style>
