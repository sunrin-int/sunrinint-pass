---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import Info from "../components/user/Info.svelte";
import Barcode from "../components/user/Barcode.svelte";

import { userInfo } from "../stores/info";

import Logout from "../assets/logout.svg";
import Background from "../assets/images/pass_background.svg";
import Header from "../components/Header.astro";
---

<Layout title="모바일 학생증 서비스">
  <div class="wrapper">
    <Header />
    <div class="pass_wrapper">
      <div class="pass">
        <Info client:only="svelte" />
        <Barcode client:only="svelte" />
      </div>
      <button class="logout">
        <p>로그아웃</p>
        <Image src={Logout} alt="logout" width={16} height={16} />
      </button>
    </div>
  </div>
</Layout>

<script>
  import User from "../api/User";
  import { resetUserInfo } from "../stores/encinfo";

  const logout = document.querySelector(".logout");

  logout?.addEventListener("click", () => {
    resetUserInfo();
    User.Logout().then(() => (location.href = "/login"));
  });
</script>

<style lang="scss" scoped>
  body {
    background-color: var(--Grayscale-20);
  }

  .wrapper {
    width: 100%;
    height: 100dvh;

    display: flex;
    align-items: center;
    justify-content: center;

    .logout {
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
      bottom: 24px;

      padding: 12px 20px;
      gap: 4px;
      border-radius: 30px;

      display: flex;
      align-items: center;
      gap: 4px;
      background-color: #ffffff;

      p {
        color: #4f5d70;
        font-size: 15px;
        font-weight: 400;
      }
    }
  }

  @keyframes slideIn {
    from {
      transform: translateY(-12px);
    }
    to {
      transform: translateY(0);
    }
  }

  .pass {
    width: 100%;
    min-width: 244px;
    max-width: 420px;
    flex: 1;

    display: flex;
    flex-direction: column;
    box-shadow: 0px 16px 20px 0px rgba(82, 99, 133, 0.12);

    border-radius: 16px;
    margin: 0 auto;

    animation: slideIn 0.5s ease-out;

    &_wrapper {
      width: 100%;
      height: 60%;
      max-height: 430px;
      padding: 0 24px;

      display: flex;
      flex-direction: column;
      justify-content: center;
    }
  }
</style>
