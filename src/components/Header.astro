---
import { Image } from "astro:assets";

interface Props {
  info?: boolean;
  settings?: boolean;
}

import Logo from "../assets/logo.svg";
import InfoEmpty from "../assets/info.svg";
import InfoFill from "../assets/info-fill.svg";
import SettingsEmpty from "../assets/settings.svg";
import SettingsFill from "../assets/settings-fill.svg";

const Info = Astro.props.info ? InfoFill : InfoEmpty;
const Settings = Astro.props.settings ? SettingsFill : SettingsEmpty;
---

<div class="header">
  <Image id="info" src={Info} alt="info" width={24} height={24} />
  <Image id="logo" src={Logo} alt="landing" width={64} height={24} />
  <Image id="settings" src={Settings} alt="settings" width={24} height={24} />
</div>
<script>
  const info = document.getElementById("info");
  const logo = document.getElementById("logo");
  const settings = document.getElementById("settings");

  info?.addEventListener("click", () => {
    window.location.href = "/info";
  });

  settings?.addEventListener("click", () => {
    window.location.href = "/settings";
  });

  logo?.addEventListener("click", () => {
    if (window.location.pathname === "/") return;
    window.location.href = "/";
  });
</script>
<style scoped>
  .header {
    width: 100%;
    height: 56px;
    padding: 16px;

    position: fixed;
    top: 0;

    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: row;
    gap: 8px;
    background-color: var(--Grayscale-20);
  }

  img {
    cursor: pointer;
  }
</style>
